<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rdSelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Ordering for self" />

            <RadioButton
                android:id="@+id/rdAssistant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Executive assistant" />

            <RadioButton
                android:id="@+id/rdPlanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event planner" />

            <RadioButton
                android:id="@+id/rdCoordi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordinator" />

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_dia_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:text="Ok"
            android:textColor="@color/c_white" />

    </LinearLayout>

</LinearLayout>